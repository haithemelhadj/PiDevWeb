{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
    <h1>Evenement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>EvenementId</th>
                <th>Nom</th>
                <th>Description</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>LieuId</th>
                <th>CalendrierId</th>
                <th>CreateurEvenement</th>
                <th>IsAdded</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.evenementId }}</td>
                <td>{{ evenement.nom }}</td>
                <td>{{ evenement.description }}</td>
                <td>{{ evenement.dateDebut ? evenement.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ evenement.dateFin ? evenement.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ evenement.lieuId }}</td>
                <td>{{ evenement.calendrierId }}</td>
                <td>{{ evenement.createurEvenement }}</td>
                <td>{{ evenement.isAdded ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_evenement_show', {'evenementId': evenement.evenementId}) }}">show</a>
                    <a href="{{ path('app_evenement_edit', {'evenementId': evenement.evenementId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_evenement_new') }}">Create new</a>
{% endblock %}
