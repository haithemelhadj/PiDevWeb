{% extends 'base.html.twig' %}

{% block title %}Lieu index{% endblock %}

{% block body %}
    <h1>Lieu index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>LieuId</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Capacite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lieu in lieus %}
            <tr>
                <td>{{ lieu.lieuId }}</td>
                <td>{{ lieu.nom }}</td>
                <td>{{ lieu.adresse }}</td>
                <td>{{ lieu.capacite }}</td>
                <td>
                    <a href="{{ path('app_lieu_show', {'lieuId': lieu.lieuId}) }}">show</a>
                    <a href="{{ path('app_lieu_edit', {'lieuId': lieu.lieuId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
